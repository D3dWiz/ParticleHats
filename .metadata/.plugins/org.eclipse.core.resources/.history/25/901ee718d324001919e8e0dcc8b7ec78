package com.mediusecho.particlehats.editor.menus;

import org.bukkit.Bukkit;
import org.bukkit.Material;
import org.bukkit.entity.Player;
import org.bukkit.inventory.ItemStack;

import com.mediusecho.particlehats.Core;
import com.mediusecho.particlehats.editor.EditorMenu;
import com.mediusecho.particlehats.editor.MenuBuilder;
import com.mediusecho.particlehats.locale.Message;
import com.mediusecho.particlehats.util.ItemUtil;

public class EditorActionOverviewMenu extends EditorMenu {

	public EditorActionOverviewMenu(Core core, Player owner, MenuBuilder menuBuilder) 
	{
		super(core, owner, menuBuilder, true);
		
		inventory = Bukkit.createInventory(null, 27, Message.EDITOR_ACTION_OVERVIEW_MENU_TITlE.getValue());
		buildMenu();
	}

	@Override
	protected void buildMenu() 
	{
		setButton(10, backButton, backAction);
		
		// Left Click
		ItemStack leftActionItem = ItemUtil.createItem(Material.GUNPOWDER, Message.EDITOR_ACTION_SET_LEFT_CLICK);
		setButton(14, leftActionItem, (event, slot) ->
		{
			EditorActionMenu editorActionMenu = new EditorActionMenu(core, owner, menuBuilder, true);
			menuBuilder.addMenu(editorActionMenu);
			editorActionMenu.open();
			return true;
		});
		
		// Right Click
		ItemStack rightActionItem = ItemUtil.createItem(Material.GUNPOWDER, Message.EDITOR_ACTION_SET_RIGHT_CLICK);
		setButton(16, rightActionItem, (event, slot) ->
		{
			EditorActionMenu editorActionMenu = new EditorActionMenu(core, owner, menuBuilder, false);
			menuBuilder.addMenu(editorActionMenu);
			editorActionMenu.open();
			return true;
		});
	}

}
