package com.mediusecho.particlehats.database.type.mysql;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;

import org.bukkit.scheduler.BukkitRunnable;

import com.mediusecho.particlehats.Core;

public class MySQLHelper {

	private final MySQLDatabase database;
	
	public MySQLHelper (final MySQLDatabase database)
	{
		this.database = database;
	}
	
	/**
	 * Creates our initial database
	 * @throws SQLException 
	 */
	public void initDatabase () throws SQLException
	{
		database.async(() -> 
		{
			database.connect((connection) ->
			{
				String menuTableCreate = "CREATE TABLE IF NOT EXISTS menus ("
						+ "name VARCHAR(128) PRIMARY KEY,"
						+ "title VARCHAR(40) NOT NULL,"
						+ "size TINYINT(3) NOT NULL DEFAULT 6"
						+ ")";
				
				try (PreparedStatement statement = connection.prepareStatement(menuTableCreate))
				{
					if (statement.execute()) {
						Core.log("Creating initial database");
					}
				}
			});
		});
//		String menuTableCreate = "CREATE TABLE IF NOT EXISTS menus ("
//				+ "name VARCHAR(128) PRIMARY KEY,"
//				+ "title VARCHAR(40) NOT NULL DEFAULT 'Change Me',"
//				+ "size TINYINT(3) NOT NULL DEFAULT 6,"
//				+ ");";
//		
//		String settingTableCreate = "CREATE TABLE IF NOT EXISTS settings ("
//				+ "property VARCHAR(64) PRIMARY KEY,"
//				+ "value VARCHAR(128),"
//				+ "FOREIGN KEY(value) REFERENCES menus(name) ON DELETE SET NULL"
//				+ ")";
//		
//		PreparedStatement statement = con.prepareStatement(menuTableCreate);
//		
//		if (con.prepareStatement(menuTableCreate).execute()) 
//		{
//			Core.log("Creating initial database");
//			con.prepareStatement(settingTableCreate).execute();
//		}
//		
//		con.close();
	}
	
	/**
	 * Creates a new menu entry in the menus table
	 * @param menuName
	 * @param rows
	 */
	public void createNewMenu (Connection con, String menuName, int rows)
	{	
		String newMenuStatement = "INSERT INTO menus VALUES(" + menuName + "," + rows + ")";
	}
}
